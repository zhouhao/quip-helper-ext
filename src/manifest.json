{
  "name": "Quip Helper",
  "description": "An extension that improves your Quip experience",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png",
    "144": "icons/icon.png"
  },
  "browser_action": {
    "default_title": "Quip Helper"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "contextMenus"],
  "content_scripts": [
    {
      "matches": ["https://*.quip.com/*"],
      "js": ["overlay/overlay.js"],
      "css": ["bs4.css", "overlay/overlay.css"]
    }
  ],
  "commands": {
    "QUIP_ZEN_MODE": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Enter Quip.com Zen Mode"
    }
  },
  "web_accessible_resources": ["icons/dog.jpg", "icons/icon.png", "icons/dog.png"]
}
